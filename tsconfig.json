{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",

    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
